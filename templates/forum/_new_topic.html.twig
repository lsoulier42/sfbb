<div class="row justify-content-between">
    <div class="col-auto">
        <a href="{{ path('topic_new', {'forum': forum.id}) }}">
            <img src="{{ asset('images/post.gif') }}" alt="new topic btn" />
        </a>
        {% if topic is defined %}
            <a href="{{ path('post_new', {'topic': topic.id}) }}">
                <img src="{{ asset('images/lang_english/msg_newpost.gif') }}" alt="new topic btn" />
            </a>
        {% endif %}
    </div>
    {% if pager is defined %}
        <div class="col-auto">
            {{ pagerfanta(pager) }}
        </div>
    {% endif %}
</div>