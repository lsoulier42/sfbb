{% extends 'base.html.twig' %}

{% block sub_title %}
    {{ 'user.login.title'|trans }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <table class="table forum-table">
        <thead class="text-center forum-table-title">
            <tr>
                <th scope="col">{{ 'user.label.table.login'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="forum-table-row-title">
                    <div class="row justify-content-center py-1">
                        <div class="col-1">
                            {{ form_label(form.username) }}:
                        </div>
                        <div class="col-2">
                            {{ form_widget(form.username) }}
                        </div>
                    </div>
                    <div class="row justify-content-center py-1">
                        <div class="col-1">
                            {{ form_label(form.password) }}:
                        </div>
                        <div class="col-2">
                            {{ form_widget(form.password) }}
                        </div>
                    </div>
                    <div class="row justify-content-center py-1">
                        <div class="col-1">
                            {{ form_label(form.rememberMe) }}
                        </div>
                        <div class="col-2">
                            {{ form_widget(form.rememberMe) }}
                        </div>
                    </div>
                    <div class="row justify-content-center py-1">
                        <div class="col-2 text-center pe-5">
                            {{ form_widget(form.submit) }}
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    {{ form_end(form) }}
{% endblock %}