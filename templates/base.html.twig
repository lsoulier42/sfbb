<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                {{ 'project.name'|trans }} -
                {% block sub_title %}
                {% endblock %}
            {% endblock %}
        </title>
        <link rel="icon" href="{{ asset('favicon.ico') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {% block additionnal_stylesheets %}
            {% endblock %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block additionnal_javascripts_top %}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block header %}
                {% include 'shared/layout/_menu.html.twig' %}
            {% endblock %}
            <div class="row">
                <div class="col-12 px-3">
                    {% block alert %}
                        {% include 'shared/layout/_alert.html.twig' %}
                    {% endblock %}
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
            {% block footer %}
            {% endblock %}
        {% endblock %}
        {% block additionnal_javascripts_bottom %}
        {% endblock %}
    </body>
</html>
