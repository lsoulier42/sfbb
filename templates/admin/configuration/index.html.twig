{% extends 'base_admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
                <table class="table forum-table">
                    <thead class="text-center forum-table-title">
                        <tr>
                            <th scope="col" colspan="3">
                                {{ 'configuration.title.index'|trans }}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="forum-table-row-title text-center bg-black bg-opacity-25">
                            <th scope="col" class="col-2">
                                {{ 'configuration.label.title'|trans() }}
                            </th>
                            <th scope="col" class="col-8">
                                {{ 'configuration.label.value'|trans() }}
                            </th>
                            <th scope="col" class="col-8">
                                {{ 'configuration.label.edit'|trans() }}
                            </th>
                        </tr>
                        {% for field in form.children %}
                            <tr class="forum-table-row-title text-center">
                                {% if field.vars.name != '_token' %}
                                    {% if field.vars.name == 'submit' %}
                                        <td colspan="3">
                                            {{ form_widget(field) }}
                                        </td>
                                    {% else %}
                                        <th scope="row">
                                            {{ form_label(field) }}
                                        </th>
                                        <td>
                                            {{ form_widget(field) }}
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_configuration_edit', {'configuration': ids[field.vars.name]}) }}">
                                                <img src="{{ asset('images/lang_english/icon_edit.gif') }}" alt="edit-config" />
                                            </a>
                                        </td>
                                    {% endif %}
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {{ form_end(form) }}
            <div class="row justify-content-end">
                <div class="col-auto">
                    <a class="badge bg-success text-white p-1 fw-bolder" href="{{ path('admin_configuration_new') }}">
                        {{ 'configuration.label.new'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}